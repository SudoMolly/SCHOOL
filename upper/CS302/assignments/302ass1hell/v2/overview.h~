        int tick(auto & animal);
    private:
        std::vector<int> ledger;
        std::vector<node*> round_ledger;
        node * rear;
        std::vector<std::string>  animals;
};

class LLL
{
    public:
        LLL();
        ~LLL();
        
        class node
        {
            public:
                node(std::string & toname, char *& animal, int wins);
                node();
                ~node();
            private:
                node * next;
                std::string name;
                char * animal;
                int wins;
        };

        bool display(LLL::node*current);

    private:
        std::string name;
        char * animal;
        int wins;

        LLL * head;
        LLL * rear;
};

